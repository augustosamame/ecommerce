				<!-- Top Cart
				============================================= -->
				<div id="top-cart">
					<a href="#" id="top-cart-trigger"><i class="icon-shopping-cart"></i><span>5</span></a>
					<div class="top-cart-content">
						<div class="top-cart-title">
							<h4><%= t('.cart') %></h4>
						</div>
						<div class="top-cart-items">
							<% @cart.cart_items.each do |item| %>
								<div class="top-cart-item clearfix">
									<div class="top-cart-item-image">
										<a href="<%= product_path(item.product) %>">
	                    <%= image_tag item.product.image.thumb_100.url, width: 48, height: 48, alt: "" %>
	                  </a>
									</div>
									<div class="top-cart-item-desc">
										<%= link_to item.product.name, product_path(item.product) %>
										<span class="top-cart-item-price"><%= number_to_currency(item.product.current_price / 100) %></span>
										<span class="top-cart-item-quantity"><%= "x #{item.quantity}" %></span>
									</div>
								</div>
							<% end %>
						</div>
						<div class="top-cart-action clearfix">
							<span class="fleft top-checkout-price"><%= number_to_currency(@cart_subtotal) %></span>
							<a href="<%= cart_path(@cart.id) %>">
								<button class="button button-3d button-small nomargin fright"><%= t('.view_cart') %></button>
							</a>
						</div>
					</div>
				</div><!-- #top-cart end -->

