<div class="page-header">
  <%= link_to new_wishlist_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Wishlist
  <% end %>
  <h1>Listing wishlists</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>User</th>
        <th>Status</th>
        <th>Show</th>
        <th>Edit</th>
        <th>Destroy</th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @wishlists) do |wishlist| %>
            <td><%= wishlist.user_id %></td>
            <td><%= wishlist.status %></td>
            <td><%= link_to "<i class='material-icons'>visibility</i>".html_safe, wishlist_path(wishlist) %></td>
        <td><%= link_to "<i class='material-icons'>edit</i>".html_safe, edit_wishlist_path(wishlist) %></td>
        <td><%= link_to "<i class='material-icons'>delete</i>".html_safe, wishlist_path(wishlist), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
