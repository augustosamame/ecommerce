  <section class="noo-page-heading eff">
    <div class="container">
      <div class="noo-heading-content">
        <h1 class="page-title eff">Wishlist</h1>
        <div class="noo-page-breadcrumb eff">
          <a href="./" class="home">ExpatShop</a>/<span>Wishlist</span>
        </div>
      </div>
    </div>
  </section>
  <div class="main">
    <div class="commerce commerce-page commerce-cart noo-shop-main">
      <div class="container">
        <div class="row">
          <div class="noo-main col-md-12">
            <table class="shop_table cart">
              <thead>
                <tr>
                  <th class="product-thumbnail">Image</th>
                  <th class="product-price">Price</th>
                  <th class="product-quantity">Quantity</th>
                  <th class="product-subtotal">Total</th>
                  <th class="product-remove">&nbsp;</th>
                </tr>
              </thead>
              <tbody>
                <% @wishlist.wishlist_items.each do |item| %>
                <tr class="cart_item">
                  <td class="product-thumbnail">
                    <a href="<%= product_path(item.product) %>">
                      <%= image_tag item.product.image.thumb_100.url, width: 100, height: 100, alt: "" %>
                    </a>
                    <%= link_to item.product.name, product_path(item.product) %>
                  </td>
                  <td class="product-price">
                    <span class="amount"><%= number_to_currency(item.product.current_price / 100) %></span>
                  </td>
                  <td class="product-quantity">
                    <div class="quantity">
                        <input type="number" step="1" min="0" name="qty" value="<%= item.quantity %>" class="input-text qty text" size="4"/>
                    </div>
                  </td>
                  <td class="product-subtotal">
                    <span class="amount"><%= number_to_currency(item.line_total) %></span>
                  </td>
                  <td class="product-remove">
                    <a href="#" class="remove">&times;</a>
                  </td>
                </tr>
                <% end %>
                <tr>
                  <td colspan="5" class="actions">
                    <a class="continue" href="shop.html">continue shopping</a>
                    <div class="coupon">
                      <label for="coupon_code">Coupon:</label>
                      <input type="text" name="coupon_code" class="input-text" id="coupon_code" value="" placeholder="Coupon code"/>
                      <input type="submit" class="button" name="apply_coupon" value="Apply Coupon"/>
                    </div>
                    <input type="submit" class="button" name="update_cart" value="Update Wishlist"/>
                  </td>
                </tr>
              </tbody>
            </table>
            <div class="cart-collaterals">
              <div class="cart_totals">
                <h2>Wishlist Totals</h2>
                <table>
                  <tr class="cart-subtotal">
                    <th>Total Items</th>
                    <td><span class="amount" id="qty-subtotal-amount"><%= @wishlist_qty_subtotal %></span></td>
                  </tr>
                  <tr class="cart-subtotal">
                    <th>Subtotal</th>
                    <td><span class="amount" id="subtotal-amount"><%= number_to_currency(@wishlist_subtotal) %></span></td>
                  </tr>
                  <tr class="shipping">
                    <th>Shipping</th>
                    <td>
                      <p>Shipping costs will be calculated once you have provided your address.</p>
                    </td>
                  </tr>
                  <tr class="order-total">
                    <th>Total</th>
                    <td><strong><span class="amount" id="total-amount"><%= number_to_currency(@wishlist_subtotal) %></span></strong> </td>
                  </tr>
                </table>
                <div class="wc-proceed-to-checkout">
                  <%= link_to "Proceed to Checkout", checkout_path, class: "checkout-button button alt wc-forward" %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <%= render "ecommerce/organici/store/prefooter" %>
  </div>
