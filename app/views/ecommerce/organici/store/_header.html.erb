<header class="noo-header header-3 inner-relative" id="organici-fixed-header">
	<div id="js_now_flash">
    <% if notice.present? %>
      <%= render partial: "ecommerce/application/js_now_flash" %>
    <% end %>
  </div>
				<div class="navbar-wrapper">
					<div class="navbar navbar-default">
						<div class="container">
							<div class="menu-position">
								<div class="navbar-header pull-left">
									<div class="noo_menu_canvas">

										<% if browser.device.mobile? %>
											<div class="mobile_cart_div">
												<ul class="mobile_cart">

													<li class="menu-item noo-menu-item-cart minicart" id="cart-line">
														<%= render "ecommerce/#{Ecommerce.ecommerce_layout}/store/cart", locals: {cart: @cart} %>
													</li>
												</ul>
											</div>
										<% end %>

										<div data-target=".nav-collapse" class="btn-navbar">
											<span></span>
											<span></span>
											<span></span>
										</div>
									</div>
									<a href="<%= root_path %>" class="navbar-brand">
									<% if browser.device.mobile? %>
											<%= image_tag Ecommerce.header_logo, alt: "Store Logo", class: "noo-logo-img noo-logo-normal noo-logo-mobile", style: "margin-top: -18px;" %>
									<% else %>
											<%= image_tag Ecommerce.header_landing_logo, style: "margin-top: -22px;", alt: "Store Logo", class: "noo-logo-img noo-logo-normal", width: 140 %>
									<% end %>
									</a>
								</div>

								<nav class="pull-left noo-main-menu">
									<ul class="nav-collapse navbar-nav">
										<a class="exit-cavas exit-cavas-invisible" href="#">&nbsp;</a>
									</ul>
									<ul class="nav-collapse navbar-nav">
										<li class="current-menu-item">
											<a href="<%= Ecommerce::Engine.routes.url_helpers.root_path %>"><%= t('.home_menu') %></a>
										</li>

										<li><a href="<%= about_us_path %>"><%= t('.about_us_menu') %></a></li>
										<!-- <li class="menu-item-has-children">
											<a href="<%= Blog::Engine.routes.url_helpers.root_path %>">Blog</a>
											<ul class="sub-menu">
												<% Blog::Post.where(post_published: true).each do |post| %>
													<li><a href="<%= Blog::Engine.routes.url_helpers.blog_path(post.id) %>"><%= post.title %></a></li>
												<% end %>
												<li><a href="<%= Blog::Engine.routes.url_helpers.root_path %>">See All Blog Articles</a></li>
											</ul>
										</li>-->
										<li><a href="<%= contact_us_path %>"><%= t('.contact_us_menu') %></a></li>

										<% if !@hide_header_ecommerce_items && current_user && current_user.admin? %>
											<li><%= link_to "Backoffice", Ecommerce::Engine.routes.url_helpers.backoffice_dashboard_path, style: "color: red;" %></li>
										<% end %>

										<% if current_user && ["admin", "blogger"].include?(current_user.role) && controller_name == "blog" %>
											<li><%= link_to t('.manage_blog_posts'), Blog::Engine.routes.url_helpers.posts_path, style: "color: red;" %></li>
										<% end %>

									</ul>
									</nav>
									<!-- menu secundario -->

									<nav class="pull-right noo-main-menu devtech-right-menu-custom">

										<!--<a href="#" class="button-expand-option"><i class="fa fa-ellipsis-v"></i></a>-->

										<ul class="nav-collapse navbar-nav">
											<% if current_user %>
												<li class="menu-item-has-children">
													<a href="#"><%= "<i class='fa fa-user'></i> #{current_user.name} <span class='caret'></span>".html_safe %></a>
													<ul class="sub-menu">
														<li><%= link_to t('.my_orders'), Ecommerce::Engine.routes.url_helpers.orders_path, class: "off-canvas-nav-my-orders" %></li>
														<li><%= link_to t('.my_account'), main_app.edit_user_registration_path, class: "off-canvas-nav-my-account" %></li>
														<li><%= link_to t('.sign_out'), main_app.logout_path %></li>

													</ul>
												</li>
											<% else %>
												<li class="menu-item">
													<a href="<%= main_app.new_user_registration_path %>" class=""><i class='fa fa-user'></i> <%= t('.my_account')%></a>
												</li>
											<% end %>



											<!-- <li class="menu-item fly-right">
												<% if @wishlist && @wishlist.id %>
												<a class="cart-button" href="<%= Ecommerce::Engine.routes.url_helpers.wishlist_path(@wishlist.id) %>">
													<i class="fa fa-heart-o"></i><%= " #{t('.wishlist')}" %>
												</a>
												<% end %>
											</li> -->

											<li class="menu-item fly-right">
												<a class="cart-button" href="<%= Ecommerce::Engine.routes.url_helpers.wishlist_message_path %>">
													<i class="fa fa-heart-o"></i><%= " #{t('.wishlist')}" %>
												</a>
											</li>

											<% unless browser.device.mobile? %>
											<li class="menu-item noo-menu-item-cart minicart fly-right" id="cart-line">
												<%= render "ecommerce/#{Ecommerce.ecommerce_layout}/store/cart", locals: {cart: @cart} %>
											</li>
											<% end %>

											<% if Ecommerce.enable_language_selector %>
											<li class="menu-item-has-children">
												<% if session[:locale] == "es-PE" %>
													<a href=""><%= image_tag "ecommerce/img/icons/flags/pe_flag.png", alt: "PE" %> ES</a>
												<% else %>
													<a href=""><%= image_tag "ecommerce/img/icons/flags/us_flag.png", alt: "US" %> EN</a>
												<% end %>
												<ul class="sub-menu flag-sub-menu">
													<li><a id="en-lang" href="#"><%= image_tag "ecommerce/img/icons/flags/us_flag.png", alt: "US" %> EN</a></li>
													<li><a id="es-lang" href="#"><%= image_tag "ecommerce/img/icons/flags/pe_flag.png", alt: "PE" %> ES</a></li>
												</ul>
											</li>
											<% end %>

											<% if Ecommerce.enable_currency_selector %>
											<li class="menu-item-has-children">
												<% if session[:currency] == "usd" %>
													<a href="">USD $</a>
												<% else %>
													<a href="">PEN S/</a>
												<% end %>
												<ul class="sub-menu currency-sub-menu">
													<li><a id="usd-currency" href="#">USD $</a></li>
													<li><a id="pen-currency" href="#">PEN S/</a></li>
												</ul>
											</li>
											<% end %>

											<li class="menu-item fly-right">
												<a id="noo-search" class="search-button noo-search" href="#">
													<i class="fa fa-search"></i><%= " #{t('.search')}" %>
												</a>
											</li>

										</ul>

									<!-- fin menu secundario  -->


								</nav>
							</div>

							<!-- menu product -->
							<% unless @hide_header_ecommerce_items %>
							<div class="container-fluid dvt_back">
								<div class="col-md-12 dvt_allp hidden-xs .hidden-sm">

									<ul class="bt_allp" style="margin-top: 7px; margin-bottom: 9px; padding-left: 1px; margin-left: -30px;">

										<li style="color:#398cd8; padding-right:20px; border-right:1px solid #cccccc;"><a href="<%= Ecommerce::Engine.routes.url_helpers.products_path %>"><%= t('.all_products') %></a></li>
										<% @primary_menu_categories.each do |category| %>
											<li><%= link_to category.name, Ecommerce::Engine.routes.url_helpers.products_path(category_id: category.id), class: "active header-menu-no-wrap" %></li>
										<% end %>
						            </ul>
								</div>
							<% end %>

							<!-- final menu product -->


						</div>
					</div>
				</div>

				<!-- TODO Search should have alternate functionality if header is being shown from blog or ecommerce -->
				<div class="search-header5">
					<div class="remove-form"></div>
					<div class="container">
						<form class="form-horizontal">
							<label class="note-search"><%= t('.search_instructions') %></label>
							<input type="search" name="search" class="form-control" value="" placeholder="Search..." autocomplete="off">
							<input type="submit" value="Search">
						</form>
					</div>
				</div>
			</header>
