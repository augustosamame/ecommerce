              <div class="cart_totals" style="padding-top: 0px;">
                <h2>Cart Totals</h2>
                <table>
                  <tr class="cart-subtotal">
                    <th>Total Items</th>
                    <td><span class="amount" id="qty-subtotal-amount"><%= @cart_qty_subtotal %></span></td>
                  </tr>
                  <tr class="cart-subtotal">
                    <th>Subtotal</th>
                    <td><span class="amount" id="subtotal-amount"><%= number_to_currency(@cart_subtotal) %></span></td>
                  </tr>
                  <tr class="shipping">
                    <th>Shipping</th>
                    <td>
                      <p>Shipping costs will be calculated once you have provided your address.</p>
                    </td>
                  </tr>
                  <tr class="order-total">
                    <th>Total</th>
                    <td><strong><span class="amount" id="total-amount"><%= number_to_currency(@cart_subtotal) %></span></strong> </td>
