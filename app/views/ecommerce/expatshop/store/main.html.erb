                      <%= t('.add_to_cart') %>
                    <% end %>
                    <%= f.hidden_field :product_id, value: product.id, id: "product_product_id_#{product.id}" %>
                    <%= f.hidden_field :quantity, value: 1, id: "devtech_quantity_field_#{product.id}" %>
                  <% end %>
