      <script>
      document.addEventListener('DOMContentLoaded', function() {
        var players = [];

        function setupOverlayInteractions(overlay, player) {
          overlay.el().querySelectorAll('.overlay-product-overlay').forEach(function(productOverlay) {
            productOverlay.addEventListener('click', function(e) {
              e.preventDefault();
              var productId = this.dataset.productId;
              
              fetch('/store/cart_items', {
                method: 'POST',
                body: JSON.stringify({
                  cart_item: {
                    product_id: productId,
                    quantity: 1
                  }
                }),
                headers: {
                  'Content-Type': 'application/json',
                  'X-Requested-With': 'XMLHttpRequest',
                  'X-CSRF-Token': document.querySelector('meta[name="csrf-token"]').content
                },
                credentials: 'same-origin'
              })
              .then(response => response.text())
              .then(responseText => {
                // console.log('Server response:', responseText);
                
                // Execute the jQuery code returned by the server
                eval(responseText);
                
                // console.log('Product added to cart');
              })
              .catch(error => {
                console.error('Error adding product to cart:', error);
              });
            });
          });
        }

        function initializeVideoPlayers() {
          var videoElements = document.querySelectorAll('.shopping-video');
          videoElements.forEach(function(videoElement, index) {
            var shoppingVideoId = videoElement.dataset.shoppingVideoId;
            // console.log('Initializing video player:', shoppingVideoId);

            var playerOptions = {
              muted: true // Mute all videos to allow autoplay
            };

            if (shoppingVideoId === '1') {
              playerOptions.autoplay = true;
            }

            var player = videojs('video-' + shoppingVideoId, playerOptions);

            players.push(player);

            player.ready(function() {

              fetch(`/store/shopping_videos/${shoppingVideoId}/overlays`)
                .then(response => response.json())
                .then(overlays => {
                  // console.log('Overlays fetched for video:', shoppingVideoId);
                  var overlayContent = `
                    <div class="vjs-overlay">
                      ${overlays.map(overlay => `
                        <div class="overlay-product-overlay mx-2" data-product-id="${overlay.product_id}" data-start-time="${overlay.start_time}" data-end-time="${overlay.end_time}">
                          <div class="overlay-product-card">
                            <img src="${overlay.product_image_url}" class="overlay-product-image" alt="${overlay.product_name}">
                            <div class="overlay-product-info">
                              <p class="overlay-product-title">${overlay.product_name.substring(0, 20)}</p>
                              <p class="overlay-product-price">${overlay.product_price}</p>
                              <p class="overlay-product-add-to-cart-button">${overlay.add_to_cart_label}</p>
                            </div>
                          </div>
                        </div>
                      `).join('')}
                    </div>
                  `;

                  var overlay = player.addChild('component', {
                    el: player.addChild('component').el()
                  });
                  overlay.el().innerHTML = overlayContent;

                  setupOverlayInteractions(overlay, player);

                  player.on('timeupdate', function() {
                    var currentTime = player.currentTime();
                    overlay.el().querySelectorAll('.overlay-product-overlay').forEach(function(productOverlay) {
                      var startTime = parseFloat(productOverlay.dataset.startTime);
                      var endTime = parseFloat(productOverlay.dataset.endTime);
                      if (currentTime >= startTime && currentTime <= endTime) {
                        productOverlay.style.display = 'block';
                      } else {
                        productOverlay.style.display = 'none';
                      }
                    });
                  });
                })
                .catch(error => {
                  console.error('Error fetching overlays for video:', shoppingVideoId, error);
                });

              // Ensure the first video starts playing
              if (shoppingVideoId === '1') {
                player.play().then(function() {
                  console.log('Autoplay started for first video:', shoppingVideoId);
                }).catch(function(error) {
                  console.error('Autoplay prevented for first video:', shoppingVideoId, error);
                  // If autoplay is prevented, try to play muted
                  player.muted(true);
                  player.play().then(function() {
                    console.log('Muted autoplay started for first video:', shoppingVideoId);
                  }).catch(function(error) {
                    console.error('Muted autoplay also prevented for first video:', shoppingVideoId, error);
                  });
                });
              }
            });
          });
        }

        initializeVideoPlayers();
      });
      </script>

