<%= simple_form_for([:backoffice, @product_price]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :product_id, collection: Ecommerce::Product.all.order(:name) %>
    <%= f.input :pricelist_id, collection: Ecommerce::Pricelist.all %>
    <%= f.input :price %>
    <%= f.input :discounted_price %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-primary" %>
  </div>
<% end %>
