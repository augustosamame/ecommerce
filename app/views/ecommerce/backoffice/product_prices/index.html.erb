<div class="page-header">
  <%= link_to new_backoffice_product_price_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    <%= t('.new_product_price') %>
  <% end %>
  <h1><%= t('.listing_product_prices') %></h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th><%= t('.product') %></th>
        <th><%= t('.price_list') %></th>
        <th><%= t('.price') %></th>
        <th><%= t('.discounted_price')%></th>
        <th><%= t('common.show') %></th>
        <th><%= t('common.edit') %></th>
        <th><%= t('common.destroy') %></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @product_prices) do |product_price| %>
        <td><%= product_price.product.name %></td>
        <td><%= product_price.try(:pricelist).try(:name) %></td>
        <td><%= product_price.price %></td>
        <td><%= product_price.discounted_price %></td>
        <td><%= link_to "<i class='material-icons'>visibility</i>".html_safe, backoffice_product_price_path(product_price) %></td>
        <td><%= link_to "<i class='material-icons'>edit</i>".html_safe, edit_backoffice_product_price_path(product_price) %></td>
        <td><%= link_to "<i class='material-icons'>delete</i>".html_safe, backoffice_product_price_path(product_price), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
