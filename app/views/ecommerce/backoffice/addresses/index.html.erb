<div class="page-header">
  <%= link_to new_backoffice_address_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Address
  <% end %>
  <h1>Listing backoffice_addresses</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>User</th>
            <th>Name</th>
            <th>Street</th>
            <th>Street2</th>
            <th>State</th>
            <th>City</th>
            <th>Address type</th>
            <th>Shipping or billing</th>
            <th>Status</th>
            <th>Show</th>
        <th>Edit</th>
        <th>Destroy</th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @backoffice_addresses) do |backoffice_address| %>
            <td><%= backoffice_address.user %></td>
            <td><%= backoffice_address.name %></td>
            <td><%= backoffice_address.street %></td>
            <td><%= backoffice_address.street2 %></td>
            <td><%= backoffice_address.state %></td>
            <td><%= backoffice_address.city %></td>
            <td><%= backoffice_address.address_type %></td>
            <td><%= backoffice_address.shipping_or_billing %></td>
            <td><%= backoffice_address.status %></td>
            <td><%= link_to "<i class='material-icons'>visibility</i>".html_safe, backoffice_address_path(backoffice_address) %></td>
        <td><%= link_to "<i class='material-icons'>edit</i>".html_safe, edit_backoffice_address_path(backoffice_address) %></td>
        <td><%= link_to "<i class='material-icons'>delete</i>".html_safe, backoffice_address_path(backoffice_address), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
