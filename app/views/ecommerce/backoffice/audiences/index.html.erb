<div class="page-header">
  <%= link_to new_backoffice_audience_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    <%= t('.new_audience') %>
  <% end %>
  <h1><%= t('.listing_audiences') %></h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th><%= t('.audience_name') %></th>
        <th><%= t('.audience_description') %></th>
        <th><%= t('.audience_type') %></th>
        <th>Recipients Total</th>
        <th><%= t('.status') %></th>
        <th>Recipients</th>
        <th><%= t('.send') %></th>
        <th><%= t('common.show') %></th>
        <th><%= t('common.edit') %></th>
        <th><%= t('common.destroy') %></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @audiences) do |audience| %>
        <td><%= audience.audience_name %></td>
        <td><%= audience.audience_description %></td>
        <td><%= audience.audience_type %></td>
        <td><%= audience.user_total %></td>
        <td><%= audience.status %></td>
        <td><%= link_to "<i class='material-icons'>account_circle</i>".html_safe, backoffice_audience_create_recipients_path(audience) %></td>
        <% if audience.active? %>
          <td><%= link_to "<i class='material-icons'>email</i>".html_safe, backoffice_audience_send_recipients_path(audience) %></td>
        <% else %>
          <td></td>
        <% end %>
        <td><%= link_to "<i class='material-icons'>visibility</i>".html_safe, backoffice_audience_path(audience) %></td>
        <td><%= link_to "<i class='material-icons'>edit</i>".html_safe, edit_backoffice_audience_path(audience) %></td>
        <td><%= link_to "<i class='material-icons'>delete</i>".html_safe, backoffice_audience_path(audience), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
