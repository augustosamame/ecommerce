<div class="page-header">
  <h1>Listing Controls</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th>Value</th>
        <th>Edit</th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @backoffice_controls) do |backoffice_control| %>
        <td><%= backoffice_control.localized_name %></td>
        <td class="control-column"><%= single_set_value(backoffice_control) %></td>
        <td><%= link_to "<i class='material-icons'>edit</i>".html_safe, edit_backoffice_control_path(backoffice_control) %></td>
      <% end %>
    </tbody>
  </table>
</div>
