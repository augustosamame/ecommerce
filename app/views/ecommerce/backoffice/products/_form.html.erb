<%= simple_form_for([:backoffice, @backoffice_product]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.association :category, as: :tags, :value_method => lambda { |category| "#{category.name}" }, :label_method => lambda { |category| "#{category.name}" }, label: "Categories (you can choose more than one)" %>
    <%= f.association :brand, :label_method => lambda { |brand| "#{brand.name}" }  %>
    <%= f.association :supplier, :label_method => lambda { |supplier| "#{supplier.name}" }  %>
    <%= f.input :status, collection: Ecommerce::Product.statuses.keys %>
    <%= f.input :name %>
    <%= f.input :short_description, label: "Short Description" %>
    <%= f.input :description, label: "Long Description" %>
    <%= f.input :description2, label: "Spanish Description" %>
    <%= f.input :price_cents, :input_html => { :id => 'price-cents' } %>
    <%= f.input :discounted_price_cents, :input_html => { :id => 'discounted-price-cents' } %>

    <%= f.input :tax_1_check, as: :boolean %>
    <%= f.input :tax_1_amount %>
    <%= f.input :tax_2_check, as: :boolean %>
    <%= f.input :tax_2_amount %>
    <%= f.input :tax_3_check, as: :boolean %>
    <%= f.input :tax_3_amount %>

    <%= f.input :stockable %>
    <%= f.input :total_quantity, label: "Quantity" %>
    <%= f.input :home_featured %>

    <%= f.label "Main Product Image" %>
    <div class="form-group">
      <% if f.object.image? %>
        <%= image_tag f.object.image.url, id: "img_actual", class: "img-thumbnail", :height => "200", :width => "200" %>
      <% end %>
      <img alt="your image" class="img-thumbnail hidden" height="200" id="img_prev" src="#" width="200"/>
      <br/>
      <span class="btn btn-default btn-file">
        <%= f.file_field :image, id: "file-image-upload" %>
      </span>
      <%= f.hidden_field :image_cache %>
    </div>
    <%= link_to_add_association 'Add SKU Variant', f, :product_skus %>

    <%= f.simple_fields_for :product_skus do |h| %>
      <%= render 'product_sku_fields', :f => h %>
      <%= link_to_add_association 'Add SKU Variant', f, :product_skus %>
    <% end %>

  </div>

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-primary" %>
  </div>
<% end %>

<script>

  $(document).ready(function(){

   {
    function readURL(input) {
      if (input.files && input.files[0]) {
        var reader = new FileReader();

        reader.onload = function (e) {
          $('#img_prev').attr('src', e.target.result);
        }
        reader.readAsDataURL(input.files[0]);
      }
    }

    $("#file-image-upload").change(function(){
      $('#img_prev').removeClass('hidden');
      $('#img_actual').addClass('hidden');
      readURL(this);
    });

    $("#price-cents").change(function(){
      $('#discounted-price-cents').val($('#price-cents').val());
    });

    $('select.form-control.tags').select2({
      tags: true
    });

    $('select.form-control.tags').val(JSON.parse(<%=raw @backoffice_product.category_list.to_json.inspect %>));
    $('select.form-control.tags').trigger('change'); // Notify any JS components that the value changed

  };
  });


</script>
