<%= simple_form_for([:backoffice, @backoffice_product]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.association :category, :label_method => lambda { |category| "#{category.name}" }  %>
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :price_cents %>
    <%= f.input :stockable %>
    <%= f.input :image %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-primary" %>
  </div>
<% end %>
