<div class="page-header">
  <%= link_to backoffice_products_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_backoffice_product_path(@backoffice_product), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show backoffice_product</h1>
</div>

<dl class="dl-horizontal">
  <dt>Name:</dt>
  <dd><%= @backoffice_product.name %></dd>

  <dt>Category:</dt>
  <dd><%= @backoffice_product.category.name %></dd>

  <dt>Description:</dt>
  <dd><%= @backoffice_product.description %></dd>

  <dt>Price:</dt>
  <dd><%= @backoffice_product.price_cents %></dd>

  <dt>Controlar Stock?:</dt>
  <dd><%= @backoffice_product.stockable %></dd>

  <dt>Image:</dt>
  <dd><%= image_tag @backoffice_product.image_url(:medium_400) %></dd>

</dl>

Product SKUs
<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Product SKU</th>
        <th>SKU Price</th>
        <th>SKU Status</th>
        <th>Show</th>
        <th>Edit</th>
        <th>Delete</th>
      </tr>
    </thead>

    <tbody>

      <% @backoffice_product.product_skus.each do |p_sku| %>
            <td><%= p_sku.sku %></td>
            <td><%= p_sku.price_cents %></td>
            <td><%= p_sku.status %></td>
            <td><%= link_to "<i class='material-icons'>visibility</i>".html_safe, backoffice_product_sku_path(p_sku) %></td>
        <td><%= link_to "<i class='material-icons'>edit</i>".html_safe, edit_backoffice_product_sku_path(p_sku) %></td>
        <td><%= link_to "<i class='material-icons'>delete</i>".html_safe, backoffice_product_sku_path(p_sku), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
