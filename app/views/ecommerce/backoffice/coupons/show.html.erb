<div class="page-header">
  <%= link_to backoffice_coupons_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_backoffice_coupon_path(@coupon), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show Coupon</h1>
</div>

<dl class="dl-horizontal">
  <dt>Coupon Code:</dt>
  <dd><%= @coupon.coupon_code %></dd>

  <dt>Coupon Type:</dt>
  <dd><%= @coupon.coupon_type %></dd>

  <dt>Dicount Percentage:</dt>
  <dd><%= @coupon.dicount_percentage %></dd>

  <dt>Fixed Discount:</dt>
  <dd><%= @coupon.discount_fixed %></dd>

  <dt>Discount Threshold:</dt>
  <dd><%= @coupon.discount_threshold %></dd>

  <dt>Start Date:</dt>
  <dd><%= @coupon.start_date %></dd>

  <dt>End Date:</dt>
  <dd><%= @coupon.end_date %></dd>

  <dt>Max Uses per Costumer:</dt>
  <dd><%= @coupon.max_uses_per_user %></dd>

  <dt>Max Uses:</dt>
  <dd><%= @coupon.max_uses %></dd>

  <dt>Current Uses:</dt>
  <dd><%= @coupon.current_uses %></dd>

  <dt>Free Shipping?</dt>
  <dd><%= @coupon.free_shipping %></dd>

  <dt>Status:</dt>
  <dd><%= @coupon.status %></dd>

</dl>

<h2>Specific Products associated with this Coupon</h2>
<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th>Category</th>
        <th>Description</th>
        <th>Price</th>
        <th>Discounted Price</th>
        <th>Tot Quantity</th>
        <th>Image</th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @backoffice_products) do |backoffice_product| %>
            <td><%= backoffice_product.name %></td>
            <td><%= backoffice_product.category_list.to_s %></td>
            <td><%= backoffice_product.description %></td>
            <td><%= backoffice_product.price_cents %></td>
            <td><%= backoffice_product.discounted_price_cents %></td>
            <td><%= backoffice_product.total_quantity %></td>
            <td><%= image_tag backoffice_product.image_url(:thumb_100), width: 100 %></td>
      <% end %>
    </tbody>
  </table>
</div>
