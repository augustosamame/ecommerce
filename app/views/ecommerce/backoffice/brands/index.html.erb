<div class="page-header">
  <%= link_to new_backoffice_brand_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    <%= t('.new_brand') %>
  <% end %>
  <h1><%= t('.listing_brands') %></h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th><%= t('.name') %></th>
        <th><%= t('.logo') %></th>
        <th><%= t('.featured') %></th>
        <th><%= t('.display_order') %></th>
        <th><%= t('common.show') %></th>
        <th><%= t('common.edit') %></th>
        <th><%= t('common.destroy') %></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @backoffice_brands) do |backoffice_brand| %>
            <td><%= backoffice_brand.name %></td>
            <td><%= image_tag backoffice_brand.logo.medium_200.url, height: 80 %></td>
            <td><%= backoffice_brand.featured %></td>
            <td><%= backoffice_brand.display_order %></td>
            <td><%= link_to "<i class='material-icons'>visibility</i>".html_safe, backoffice_brand_path(backoffice_brand) %></td>
        <td><%= link_to "<i class='material-icons'>edit</i>".html_safe, edit_backoffice_brand_path(backoffice_brand) %></td>
        <td><%= link_to "<i class='material-icons'>delete</i>".html_safe, backoffice_brand_path(backoffice_brand), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
