<div class="page-header">
  <%= link_to new_backoffice_product_variant_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Product variant
  <% end %>
  <h1>Listing backoffice_product_variants</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Product</th>
        <th>Variant name</th>
        <th>Show</th>
        <th>Edit</th>
        <th>Destroy</th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @backoffice_product_variants) do |backoffice_product_variant| %>
            <td><%= backoffice_product_variant.product.name %></td>
            <td><%= backoffice_product_variant.variant_name %></td>
            <td><%= link_to "<i class='material-icons'>visibility</i>".html_safe, backoffice_product_variant_path(backoffice_product_variant) %></td>
        <td><%= link_to "<i class='material-icons'>edit</i>".html_safe, edit_backoffice_product_variant_path(backoffice_product_variant) %></td>
        <td><%= link_to "<i class='material-icons'>delete</i>".html_safe, backoffice_product_variant_path(backoffice_product_variant), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
