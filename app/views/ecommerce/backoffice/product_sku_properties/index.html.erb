<div class="page-header">
  <%= link_to new_backoffice_product_sku_property_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Product SKU property
  <% end %>
  <h1>Listing backoffice_product_variant_values</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Product SKU</th>
            <th>Product variant</th>
            <th>Value</th>
            <th>Status</th>
            <th>Show</th>
        <th>Edit</th>
        <th>Destroy</th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @backoffice_product_sku_properties) do |backoffice_product_sku_property| %>
            <td><%= backoffice_product_sku_property.product_sku.sku %></td>
            <td><%= backoffice_product_sku_property.product_variant.variant_name %></td>
            <td><%= backoffice_product_sku_property.value %></td>
            <td><%= backoffice_product_sku_property.status %></td>
            <td><%= link_to "<i class='material-icons'>visibility</i>".html_safe, backoffice_product_sku_property_path(backoffice_product_sku_property) %></td>
        <td><%= link_to "<i class='material-icons'>edit</i>".html_safe, edit_backoffice_product_sku_property_path(backoffice_product_sku_property) %></td>
        <td><%= link_to "<i class='material-icons'>delete</i>".html_safe, backoffice_product_sku_property_path(backoffice_product_sku_property), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
