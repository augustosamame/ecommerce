<div class="page-header">
  <%= link_to new_backoffice_payment_method_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    <%= t('.new_payment_method') %>
  <% end %>
  <h1><%= t('.listing_payment_method') %></h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th><%= t('.name') %></th>
        <th><%= t('.status') %></th>
        <th><%= t('.processor') %></th>
        <th><%= t('.account_id') %></th>
        <th><%= t('.mark_as_paid') %></th>
        <th><%= t('.pre_message') %></th>
        <th><%= t('.post_message') %></th>
        <th><%= t('common.show') %></th>
        <th><%= t('common.edit') %></th>
        <th><%= t('common.destroy') %></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @backoffice_payment_methods) do |backoffice_payment_method| %>
            <td><%= backoffice_payment_method.name %></td>
            <td><%= backoffice_payment_method.status %></td>
            <td><%= backoffice_payment_method.processor %></td>
            <td><%= backoffice_payment_method.account %></td>
            <td><%= backoffice_payment_method.success_marks_as_paid %></td>
            <td><%= backoffice_payment_method.pre_message %></td>
            <td><%= backoffice_payment_method.post_message %></td>
            <td><%= link_to "<i class='material-icons'>visibility</i>".html_safe, backoffice_payment_method_path(backoffice_payment_method) %></td>
        <td><%= link_to "<i class='material-icons'>edit</i>".html_safe, edit_backoffice_payment_method_path(backoffice_payment_method) %></td>
        <td><%= link_to "<i class='material-icons'>delete</i>".html_safe, backoffice_payment_method_path(backoffice_payment_method), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
