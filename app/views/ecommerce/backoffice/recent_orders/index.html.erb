<div class="page-header">
  <h1>Ã“rdenes Recientes</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>ID</th>
        <th>Usuario</th>
        <th>Monto</th>
        <th>Estado</th>
        <th>Fecha</th>
        <th>Acciones</th>
      </tr>
    </thead>
    <tbody>
      <% @recent_orders.each do |order| %>
        <tr>
          <td><%= order.id %></td>
          <td><%= order.user.name %></td>
          <td><%= order.amount %></td>
          <td>
            <span class="label label-<%= order.stage == 'stage_delivered' ? 'success' : 'default' %>">
              <%= order.stage.humanize %>
            </span>
          </td>
          <td><%= order.created_at.strftime("%d/%m/%Y %H:%M") %></td>
          <td>
            <%= link_to "Ver", backoffice_order_path(order), class: "btn btn-primary btn-sm" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>