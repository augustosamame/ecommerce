<div class="page-header">
  <%= link_to new_backoffice_combo_discount_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Combo Discount
  <% end %>
  <h1>Listing Combo Discounts</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th><%= t('.name') %></th>
        <th><%= t('.description_en') %></th>
        <th><%= t('.description_es') %></th>
        <th><%= t('.product_id_1') %></th>
        <th><%= t('.qty_product_1') %></th>
        <th><%= t('.product_id_2') %></th>
        <th><%= t('.qty_product_2') %></th>
        <th><%= t('.discount_type') %></th>
        <th>Discount Amount (% or $)</th>
        <th><%= t('.status') %></th>
        <th><%= t('common.show') %></th>
        <th><%= t('common.edit') %></th>
        <th><%= t('common.destroy') %></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @combo_discounts) do |combo_discount| %>
        <td><%= combo_discount.name %></td>
        <td><%= combo_discount.description_en %></td>
        <td><%= combo_discount.description_es %></td>
        <td><%= combo_discount.product_1 %></td>
        <td><%= combo_discount.qty_product_1 %></td>
        <td><%= combo_discount.product_2 %></td>
        <td><%= combo_discount.qty_product_2 %></td>
        <td><%= combo_discount.discount_type %></td>
        <td><%= combo_discount.discount_amount %></td>
        <td><%= combo_discount.status %></td>
        <td><%= link_to "<i class='material-icons'>visibility</i>".html_safe, backoffice_combo_discount_path(combo_discount) %></td>
        <td><%= link_to "<i class='material-icons'>edit</i>".html_safe, edit_backoffice_combo_discount_path(combo_discount) %></td>
        <td><%= link_to "<i class='material-icons'>delete</i>".html_safe, backoffice_combo_discount_path(combo_discount), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
