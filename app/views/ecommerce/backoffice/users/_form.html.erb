<%= simple_form_for([:backoffice, @backoffice_user]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :email %>
    <%= f.input :avatar %>
    <%= f.input :role, collection: User.roles.keys %>
    <%= f.input :phone %>
    <%= f.input :username %>
    <%= f.input :doc_id %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-primary" %>
  </div>
<% end %>
