<div class="page-header">
  <%= link_to new_backoffice_user_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New User
  <% end %>
  <h1>Listing backoffice_users</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Role</th>
        <th>Show</th>
        <th>Edit</th>
        <th>Delete</th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @backoffice_users) do |backoffice_user| %>
            <td><%= backoffice_user.name %></td>
            <td><%= backoffice_user.email %></td>
            <td><%= backoffice_user.role %></td>
            <td><%= link_to "<i class='material-icons'>visibility</i>".html_safe, backoffice_user_path(backoffice_user) %></td>
        <td><%= link_to "<i class='material-icons'>edit</i>".html_safe, edit_backoffice_user_path(backoffice_user) %></td>
        <td><%= link_to "<i class='material-icons'>delete</i>".html_safe, backoffice_user_path(backoffice_user), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
