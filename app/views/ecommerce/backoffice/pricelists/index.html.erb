<div class="page-header">
  <%= link_to new_backoffice_pricelist_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    <%= t('.new_pricelist') %>
  <% end %>
  <h1><%= t('.pricelists') %></h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th><%= t('.name') %></th>
        <th><%= t('.status') %></th>
        <th><%= t('common.show') %></th>
        <th><%= t('common.edit') %></th>
        <th><%= t('common.destroy') %></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @pricelists) do |pricelist| %>
        <td><%= pricelist.name %></td>
        <td><%= pricelist.status %></td>
        <td><%= link_to "<i class='material-icons'>visibility</i>".html_safe, backoffice_pricelist_path(pricelist) %></td>
        <td><%= link_to "<i class='material-icons'>edit</i>".html_safe, edit_backoffice_pricelist_path(pricelist) %></td>
        <td><%= link_to "<i class='material-icons'>delete</i>".html_safe, backoffice_pricelist_path(pricelist), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
