<h3>Order Details</h3>
<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Qty</th>
        <th>Product</th>
        <th>Price</th>
        <th>Total</th>
      </tr>
    </thead>
    <tbody>
      <% @order_details.each do |item| %>
        <tr>
          <td>
            <%= item.quantity %>
          </td>
          <td>
            <%= item.product.name %>
          </td>
          <td>
            <%= number_to_currency(item.price) %>
          </td>
          <td>
            <%= number_to_currency(item.line_total(@current_user)) %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
