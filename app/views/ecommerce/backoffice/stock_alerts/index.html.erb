<div class="page-header">
  <h1>Listing Stock Alerts</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Product</th>
        <th>User</th>
        <th>Status</th>
        <th>Destroy</th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @stock_alerts) do |stock_alert| %>
        <td><%= stock_alert.product.name %></td>
        <td><%= stock_alert.user.name %></td>
        <td><%= stock_alert.status %></td>
        <td><%= link_to "<i class='material-icons'>delete</i>".html_safe, backoffice_stock_alert_path(stock_alert), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
