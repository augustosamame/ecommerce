<% content_for :head do %>
<% nofollow %>
<% noindex %>
<%= stylesheet_link_tag    'ecommerce/backoffice/backoffice', media: 'all' %>
<%= javascript_include_tag 'ecommerce/backoffice/backoffice' %>
<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

<!-- AQUI VAN LOS CSS Y JS SOLO DE BACKOFFICE -->

<% end %>

<body class="<%=  controller.controller_name  %>">
<!-- AQUI VA EL BODY SOLO DE BACKOFFICE -->

<!-- BEGIN HEADER -->

<%= render 'ecommerce/backoffice/header' %>

<!-- END HEADER -->

<!-- BEGIN CONTENT -->
  <div class="page-container row-fluid">

    <%= render "ecommerce/backoffice/sidebar" %>

    <!-- BEGIN PAGE CONTAINER-->
    <div class="page-content">

      <div class="content">

        <%= render 'application/flashes' %>
        <%= render 'application/spinner' %>

        <%= yield %>

      </div>
    </div>

  </div>
  <!-- END CONTENT -->
  <% # Javascript at the bottom for fast page loading %>

</body>

</html>

<script type="text/javascript">
$(document).ready(function(){
  $('.show-spinner').click(function() {
      $('#spinner').show();
  });
});
</script>

<script>
//disable change number with scroll on all number fields
$(function(){
  $(':input[type=number]').on('mousewheel',function(e){ $(this).blur(); });
});
</script>

<script type="text/javascript">
//tags = <%= raw @users_array %>
$(document).ready(function(){
users_tags = jQuery.parseJSON(<%=raw @users_array.to_json.inspect %>);
services_tags = jQuery.parseJSON(<%=raw @services_array.to_json.inspect %>);
$( ".search_user" ).autocomplete({
  autoFocus: true,
  minLength: 1,
  source: users_tags,
  select: function (e, ui) {
        window.location.href = ("/backoffice/users/" + ui.item.id);
    },
});
$( ".search_service" ).autocomplete({
  autoFocus: false,
  minLength: 1,
  source: services_tags,
  select: function (e, ui) {
        window.location.href = ("/backoffice/services/" + ui.item.id);
    },
});
});
</script>

<% parent_layout "application" %>
