<% content_for :head do %>
  <title>Canvas Ecommerce</title>
  <%= stylesheet_link_tag    "ecommerce/canvas_ecommerce", media: "all" %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1" />
<% end %>

<!-- Document Wrapper
============================================= -->
<div id="wrapper" class="clearfix">

  <%= render 'ecommerce/application/flashes' %>
  <%= render 'ecommerce/application/spinner' %>

  <%= render 'ecommerce/store/top_bar' %>
  <%= render 'ecommerce/store/header' %>

  <%= yield %>

  <%= render 'ecommerce/store/footer' %>

</div>

<!-- Go To Top
============================================= -->
<div id="gotoTop" class="icon-line-arrow-up"></div>


<%= javascript_include_tag "ecommerce/canvas_ecommerce" %>

<% parent_layout "ecommerce/base" %>
