<div class="page-header">
  <%%= link_to new_<%= singular_table_name %>_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New <%= human_name %>
  <%% end %>
  <h1>Listing <%= plural_table_name %></h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
    <% attributes.each do |attribute| -%>
        <th><%= attribute.human_name %></th>
    <% end -%>
        <th>Show</th>
        <th>Edit</th>
        <th>Destroy</th>
      </tr>
    </thead>

    <tbody>
      <%%= content_tag_for(:tr, @<%= plural_table_name %>) do |<%= singular_table_name %>| %>
    <% attributes.each do |attribute| -%>
        <td><%%= <%= singular_table_name %>.<%= attribute.name %> %></td>
    <% end -%>
        <td><%%= link_to "<i class='material-icons'>visibility</i>".html_safe, <%= singular_table_name %> %></td>
        <td><%%= link_to "<i class='material-icons'>edit</i>".html_safe, edit_<%= singular_table_name %>_path(<%= singular_table_name %>) %></td>
        <td><%%= link_to "<i class='material-icons'>delete</i>".html_safe, <%= singular_table_name %>, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <%% end %>
    </tbody>
  </table>
</div>
